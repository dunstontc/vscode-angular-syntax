{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "angular-html",
    "scopeName": "source.angular-html",
    "patterns": [
        {
            "include": "source.html"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#constant"
        },
        {
            "include": "#entity"
        },
        {
            "include": "#invalid"
        },
        {
            "include": "#keyword"
        },
        {
            "include": "#meta"
        },
        {
            "include": "#operator"
        },
        {
            "include": "#punctuation"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#string"
        },
        {
            "include": "#support"
        },
        {
            "include": "#type"
        },
        {
            "include": "#variable"
        }
    ],
    "repository": {
        "entities": {
            "patterns": [
                {
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.entity.html"
                        },
                        "3": {
                            "name": "punctuation.definition.entity.html"
                        }
                    },
                    "match": "(&)([a-zA-Z0-9]+|#[0-9]+|#x[0-9a-fA-F]+)(;)",
                    "name": "constant.character.entity.html"
                },
                {
                    "match": "&",
                    "name": "invalid.illegal.bad-ampersand.html"
                }
            ]
        },
        "tag-stuff": {
            "patterns": [
                {
                    "include": "#angular-directives"
                },
                {
                    "include": "#tag-id-attribute"
                },
                {
                    "include": "#tag-generic-attribute"
                },
                {
                    "include": "#string-double-quoted"
                },
                {
                    "include": "#string-single-quoted"
                },
                {
                    "include": "#unquoted-attribute"
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "include": "#angular-interpolations"
                }
            ]
        },
        "constant": {
            "patterns": []
        },
        "entity": {
            "patterns": []
        },
        "invalid": {
            "patterns": []
        },
        "keyword": {
            "patterns": []
        },
        "meta": {
            "patterns": []
        },
        "operator": {
            "patterns": []
        },
        "punctuation": {
            "patterns": []
        },
        "storage": {
            "patterns": []
        },
        "string": {
            "patterns": []
        },
        "support": {
            "patterns": []
        },
        "type": {
            "patterns": []
        },
        "variable": {
            "patterns": []
        }
    }
}